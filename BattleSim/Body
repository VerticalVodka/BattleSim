$dodgeAtk[7] = $dodgeBase[7] * (1 + $techAtk[/*analyse*/] / 20 + $techAtk[34] / 20);
$dodgeAtk[8] = $dodgeBase[8] * (1 + $techAtk[/*analyse*/] / 20 + $techAtk[35] / 20);
$dodgeAtk[9] = 0;
